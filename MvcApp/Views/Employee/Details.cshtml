@model MvcApp.Models.Employee

@{
    ViewBag.Title = "Details";
}

<h2>Employee Details</h2>

<table style="font-family: Areal">
    <tr>
        <td>
            <b>Employee Id:</b>
        </td>
        <td>
            @Model.EmployeeId
        </td>
    </tr>
    
    <tr>
        <td>
            <b>Name:</b>
        </td>
        <td>
            @Model.Name
        </td>
    </tr>
    
    <tr>
        <td>
            <b>City:</b>
        </td>
        <td>
            @Model.City
        </td>
    </tr>
    
    <tr>
        <td>
            <b>Gender:</b>
        </td>
        <td>
            @Model.Gender
        </td>
    </tr>

</table>

@Html.ActionLink("Back to List", "Index", new{departmentId = @Model.DepartmentId})